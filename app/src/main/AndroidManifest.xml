<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.codecrook.mycitytour">

    <application
        android:allowBackup="true"
        android:icon="@drawable/cityscape"
        android:label="@string/app_name"
        android:roundIcon="@drawable/cityscape"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controller.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.ShowcaseActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".view.DetailsActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:label="@string/details_screen_label"
            android:parentActivityName=".controller.ShowcaseActivity"></activity>
    </application>

</manifest>